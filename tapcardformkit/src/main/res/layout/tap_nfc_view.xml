<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topLinearNFC">

        <company.tap.tapcardformkit.open.web_wrapper.internal.TapTextViewNew
            android:id="@+id/scan_nfc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:fontFamily="sans-serif-light"
            android:textColor="#4b4847"
            android:textSize="12sp"
            android:textStyle="normal"
            tools:text="Ready to scan, add the card under the device to scan it." />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mainLinearNFC"
        tools:background="@drawable/blurbackground"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/gif_nfc"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:layout_gravity="center_horizontal" />

        <company.tap.tapcardformkit.open.web_wrapper.internal.TapTextViewNew
            android:id="@+id/aboutNFC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:layout_marginBottom="34dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal"
            android:visibility="gone"
            android:lineSpacingExtra="4sp"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textStyle="normal"
            tools:text="Near-field communication is a set of communication protocols for communication between two electronic devices over a distance of 4 cm or less." />

    </LinearLayout>


</LinearLayout>